# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

# Your Supabase project URL (e.g., https://abcdefghijklmnop.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url

# Your Supabase anonymous/public key (safe to expose in browser)
# Used for client-side authentication and database access with RLS
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Your Supabase service role key (SECRET - never expose in client code)
# Bypasses Row Level Security - only use server-side for admin operations
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# The base URL of your application
# Production: https://yourdomain.com
# Development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Site URL for CSRF protection (should match NEXT_PUBLIC_APP_URL)
# This is used to validate the Origin/Referer headers for CSRF protection
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Your application name (displayed in browser title and UI)
NEXT_PUBLIC_APP_NAME=SaaS Template

# Multi-tenant mode configuration
# Set to "true" to enable multi-site mode where each tenant gets a subdomain
# Set to "false" for single-site mode where all tenants share the same domain
MULTI_SITE_MODE=false

# Site ID (required only if MULTI_SITE_MODE=false)
# Leave empty for multi-site mode
SITE_ID=

# ==============================================================================
# STORAGE CONFIGURATION
# ==============================================================================

# Supabase storage bucket name for file uploads
# Create this bucket in your Supabase project dashboard
# Navigate to: Storage > Create a new bucket
NEXT_PUBLIC_STORAGE_BUCKET=files

# Maximum file upload size in MB (default: 50)
MAX_FILE_SIZE_MB=50

# ==============================================================================
# AUTHENTICATION CONFIGURATION
# ==============================================================================

# JWT secret for session encryption (generate a random 32+ character string)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key

# Session cookie name
SESSION_COOKIE_NAME=sb-auth-token

# Session duration in seconds (default: 7 days = 604800 seconds)
SESSION_MAX_AGE=604800

# ==============================================================================
# EMAIL CONFIGURATION (Required for invitations)
# ==============================================================================
# Choose ONE of the following options:

# OPTION 1: Resend (Recommended - Modern, developer-friendly)
# Sign up at https://resend.com and get your API key
# Resend offers 100 emails/day on free tier, 3000 emails/month on paid plans
RESEND_API_KEY=

# OPTION 2: SMTP (Alternative - Works with any SMTP provider)
# Configure if you're using SendGrid, Gmail, AWS SES, or any SMTP service

# SMTP server host (e.g., smtp.sendgrid.net, smtp.gmail.com, email-smtp.us-east-1.amazonaws.com)
SMTP_HOST=

# SMTP server port (typically 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (often your email address)
SMTP_USER=

# SMTP password or API key
SMTP_PASSWORD=

# Email "from" address (must be verified with your email provider)
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Email "from" name
SMTP_FROM_NAME=SaaS Template

# ==============================================================================
# ERROR TRACKING (Optional)
# ==============================================================================

# Sentry DSN for error tracking
# Get this from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=

# Sentry environment (development, staging, production)
SENTRY_ENVIRONMENT=development

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# PostHog API Key and Host
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================================================
# FEATURE FLAGS (Optional)
# ==============================================================================

# Enable activity feed feature (true/false)
NEXT_PUBLIC_ENABLE_ACTIVITY_FEED=true

# Enable file uploads (true/false)
NEXT_PUBLIC_ENABLE_FILE_UPLOADS=true

# Enable notifications (true/false)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Enable audit logs (true/false)
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true

# ==============================================================================
# RATE LIMITING (Optional)
# ==============================================================================

# API rate limit - requests per minute per user
API_RATE_LIMIT_PER_MINUTE=100

# File upload rate limit - uploads per hour per user
FILE_UPLOAD_RATE_LIMIT_PER_HOUR=20

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================

# Show debug information in development
DEBUG=false

# Skip email verification in development (NOT for production)
SKIP_EMAIL_VERIFICATION=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

